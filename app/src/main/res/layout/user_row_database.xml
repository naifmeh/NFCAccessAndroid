<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="10dp"

    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:scrollbars="vertical">

    <TextView
        android:id="@+id/uidDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="0c312d1d" />



    <TextView
        android:id="@+id/NameDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uidDatabase"
        tools:text="Mehanna" />

    <TextView
        android:id="@+id/lastNameDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/NameDatabase"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/NameDatabase"
        tools:text="Naif" />



    <ImageButton
        android:id="@+id/deleteDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/rankDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lastNameDatabase"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/deleteDatabase"
        tools:text="0" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/uidDatabase"
        android:layout_marginRight="45dp"
        android:layout_toLeftOf="@id/deleteDatabase"
        android:text="@string/rankDisplayRecycler"
        android:textStyle="bold"/>

</RelativeLayout>